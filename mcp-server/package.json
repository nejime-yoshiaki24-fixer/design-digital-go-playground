{
  "name": "@design-system-mcp/validator",
  "version": "1.0.0",
  "description": "Design System Validator MCP Server - デジタル庁デザインシステム検証ツール",
  "private": true,
  "type": "module",
  "bin": {
    "design-system-validator": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "inspector": "npm run build && npx @modelcontextprotocol/inspector dist/index.js",
    "test": "NODE_OPTIONS='--experimental-vm-modules' jest",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.5",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.14.0",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^8.33.1",
    "eslint": "^8.57.1",
    "jest": "^29.7.0",
    "prettier": "^3.3.2",
    "ts-jest": "^29.1.5",
    "tsx": "^4.15.7",
    "typescript": "^5.5.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
