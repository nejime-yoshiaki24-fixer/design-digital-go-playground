{
  "name": "design-system-mcp-playground",
  "version": "1.0.0",
  "private": true,
  "description": "デジタル庁デザインシステム準拠のMCPサーバー",
  "workspaces": [
    "mcp-server"
  ],
  "scripts": {
    "dev": "cd mcp-server && npm run dev",
    "build": "cd mcp-server && npm run build",
    "test": "cd mcp-server && npm test",
    "typecheck": "cd mcp-server && npm run typecheck",
    "lint": "cd mcp-server && npm run lint",
    "format": "cd mcp-server && npm run format",
    "sync:tokens": "node scripts/sync-tokens-from-figma.js"
  },
  "devDependencies": {
    "lerna": "^8.1.2",
    "prettier": "^3.5.3",
    "prettier-plugin-tailwindcss": "^0.6.12"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
