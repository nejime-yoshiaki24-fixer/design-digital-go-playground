{
  "name": "design-digital-go",
  "version": "1.0.0",
  "private": true,
  "description": "デジタル庁デザインシステム準拠のUIコンポーネントライブラリとMCPサーバー",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev:components": "npm run start -w @design-digital-go/components",
    "dev:storybook": "npm run storybook -w @design-digital-go/components",
    "dev:mcp": "cd packages/mcp-server && uv run mcp_server.py",
    "build:components": "npm run build -w @design-digital-go/components",
    "test:components": "npm test -w @design-digital-go/components",
    "test:visual": "npm run test:visual -w @design-digital-go/components",
    "test:mcp": "cd packages/mcp-server && uv run pytest",
    "clean": "rm -rf packages/*/node_modules packages/*/build packages/*/dist",
    "install:all": "npm install && cd packages/mcp-server && uv sync"
  },
  "devDependencies": {
    "lerna": "^8.1.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}